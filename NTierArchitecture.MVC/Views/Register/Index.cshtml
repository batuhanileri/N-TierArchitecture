@model Writer
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Yazar Kayıt Sayfası</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">

                @using (Html.BeginForm("Index", "Register", FormMethod.Post))
                {

                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">Ad Soyad</label>

                            @*<input type="text" class="form-control" id="validationDefault01" name="Name" placeholder="" required="">*@
                            @Html.TextBoxFor(x => x.Name)
                            @Html.ValidationMessageFor(x => x.Name)

                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">Mail</label>
                            @*<input type="email" class="form-control" id="validationDefault02" name="Mail" placeholder="" required="">*@
                            @Html.TextBoxFor(x => x.Mail)
                            @Html.ValidationMessageFor(x => x.Mail)
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Şifre</label>
                            @*<input type="password" class="form-control" id="password1" name="Password" placeholder="" required="">*@
                            @Html.PasswordFor(x => x.Password)
                            @Html.ValidationMessageFor(x => x.Password)
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Görsel Dosya Yolu</label>
                            @* <input type="text" class="form-control" id="password2" name="Image" placeholder="" required="">*@
                            @Html.TextBoxFor(x => x.Image)
                            @Html.ValidationMessageFor(x => x.Image)
                        </div>

                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Kayıt ol</button>
                    <p>
                        <a href="#">By clicking Signup, I agree to your terms</a>
                    </p>

                }

            </div>
        </div>
    </div>
</section>
